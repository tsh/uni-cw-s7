@model TKPZ_kurs_1.Models.Auction
@{    
    var auction = Model;
}

<div class="auction">
    <h3>@auction.Title</h3>

    <div class="details">
        <p>Start: @auction.StartTime.ToString("g")</p>
        <p>End: @auction.EndTime.ToString("g")</p>
        <p>Starting Price: @auction.StartPrice.ToString("C")</p>
        <p>Current Price: 
            @if (auction.CurrentPrice == null)
            {
                @: [No bids]
            }
            else
            {
                <span>@auction.CurrentPrice.ToString()</span>
            }
        </p>
    </div>

    @if (auction.ImageUrl != null)
    {
        <img src="@auction.ImageUrl" title="@auction.Title" />
    }
    <div class="description">
        @auction.Description
    </div>
</div>